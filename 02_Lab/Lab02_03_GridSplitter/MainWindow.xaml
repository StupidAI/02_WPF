<Window x:Class="Lab02_03_GridSplitter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab02_03_GridSplitter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Background="Aqua" Margin="0" TextWrapping="Wrap" Text="TextBlock"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" Width="5"/>
        <TextBlock Background="Beige" Grid.Column="2" Margin="0" TextWrapping="Wrap" Text="TextBlock"/>

    </Grid>
</Window>
