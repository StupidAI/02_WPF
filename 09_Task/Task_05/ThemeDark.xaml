<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:con ="clr-namespace:System;assembly=mscorlib">
    <!--Словарь ресурсов для темной темы-->
    
    <!--Цвета-->
    <SolidColorBrush x:Key="cMain" Color="#FF383838"/>
    <SolidColorBrush x:Key="cBack" Color="#FFACACAC"/>
    <SolidColorBrush x:Key="cFront" Color="White"/>
    
    <!--Стили-->
    <Style x:Name="sMenu" TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource cMain}"/>
        <Setter Property="Foreground" Value="{StaticResource cFront}"/>
        <Setter Property="BorderBrush" Value="{StaticResource cBack}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    <Style TargetType="MenuItem">
        <Setter Property="Background" Value="{StaticResource cMain}"/>
        <Setter Property="Foreground" Value="{StaticResource cFront}"/>
    </Style>
    <Style TargetType="ToolBarTray">
        <Setter Property="Background" Value="{StaticResource cBack}"/>
    </Style>
    <Style TargetType="ToolBar">
        <Setter Property="Background" Value="{StaticResource cMain}"/>
    </Style>
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource cFront}"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource cBack}"/>
        <Setter Property="Foreground" Value="{StaticResource cFront}"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="BorderBrush" Value="{StaticResource cFront}"/>
    </Style>
    
</ResourceDictionary>